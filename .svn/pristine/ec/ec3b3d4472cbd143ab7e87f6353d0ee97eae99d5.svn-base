@model IEnumerable<ProfProPartage.ViewModel.ViewModelFicheCours>
@using ProfProPartage.Helper

        
        @foreach (var item in Model)
            {
                    <a class="box PDFViewerButton @item.Theme.Replace(" ", "_").Replace("_:_", "-_-").Replace("_/_", "---").Replace("(", "__")  @item.Matiere.Replace(" ", "_") @item.Niveau" data-toggle="modal" data-src=@item.UrlPDF title=@item.Titre niveau=@item.Niveau theme=@item.Theme matiere=@item.Matiere temperature=@item.Temperature description=@item.Description.Replace(" ", "_") data-target="#PDFViewer">
                        <h4 style="margin-top:5px; margin-bottom:5px; height:40px;">@Html.DisplayFor(modelItem => item.Titre)</h4>
                        <img src=@item.UrlJPG class="previewPDF img-thumbnail" />
                        <div class="infoFiche">
                            <ul>
                                <li>
                                    <div><label>Niveau : </label> @Html.DisplayFor(modelItem => item.Niveau)</div>
                                </li>
                                <li>
                                    <div><label>Matière : </label> @Html.Replace(item.Matiere, "_", " ")</div>
                                </li>
                                <li>
                                    <div><label>Thème : </label> @Html.Replace(item.Theme, "_", " ")</div>
                                </li>
                                <li>
                                    <div><label>Température : </label> @Html.DisplayFor(modelItem => item.Temperature)°</div>
                                </li>
                                <li>
                                    <div><label>Description : </label> @Html.DisplayFor(modelItem => item.Description)</div>
                                </li>
                                <li>
                                    <div><label>Auteur : </label> @Html.DisplayFor(modelItem => item.User.UserName)</div>
                                </li>
                            </ul>
                        </div>
                    </a>
            }

@model IEnumerable<ProfProPartage.ViewModel.ViewModelFicheCoursInvalide>
@using ProfProPartage.Helper

@foreach (var item in Model)
            {
    <div class="box PDFViewerButton @item.Theme.Replace(" ", "_").Replace("_:_", "-_-").Replace("_/_", "---").Replace("(", "__")  @item.Matiere.Replace(" ", "_") @item.Niveau" data-toggle="modal" idFiche=@item.Id data-src=@item.UrlPDF title=@item.Titre niveau=@item.Niveau theme=@item.Theme matiere=@item.Matiere temperature=@item.Temperature data-target="#PDFViewer">
        <div class="demo-title">@Html.DisplayFor(modelItem => item.Titre)</div>
        <div class="post-module">
            <div class="apercu">
                <div class="ribbonTemp"><span>@Html.DisplayFor(modelItem => item.Temperature)°</span></div>
                <img src=@item.UrlJPG />
            </div>
            <div class="post-content">
                <div class="category">@Html.DisplayFor(modelItem => item.Niveau)</div>
                <h1 class="title">@Html.Replace(item.Matiere, "_", " ")</h1>
                <h2 class="sub_title">@Html.Replace(item.Theme, "_", " ")</h2>
                <p class="description">@Html.DisplayFor(modelItem => item.Description)</p>
                <div class="post-meta"><span class="timestamp"><i class="fa fa-clock-o"></i> 6 mins ago</span><span class="comments"><i class="fa fa-comments"></i><a href="#"> 39 comments</a></span><span class="author"><i class="fa fa-user"></i>@Html.DisplayFor(modelItem => item.User.UserName)</span></div>
            </div>
        </div>
    </div>
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - ProfProPartage</title>

        <link rel="stylesheet" href="~/Content/Site.css" />
        <link rel="stylesheet" href="~/Content/blueimp-gallery.css" />
        <link rel="stylesheet" href="~/Content/blueimp-gallery-indicator.css" />
        <link rel="stylesheet" href="~/Content/blueimp-gallery-video.css" />
        <link rel="stylesheet" href="~/Content/bootstrap.css" />
        <link rel="stylesheet" href="~/Content/jquery.fileupload.css" />
        <link rel="stylesheet" href="~/Content/jquery.fileupload-ui.css" />
        <link rel="shortcut icon" type="image/x-icon" href="~/Images/ppp.ico" />
    </head>
<body>
    <div id="fond"></div>
    <div id="header-menu" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container menu">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" id="Ic" class="navbar-brand"><strong style="color:#39cf09;">P</strong>rof<strong style="color:#fa2420;">P</strong>ro<strong style="color:#ffa500;">P</strong>artage</a>
            </div>
            <div id="bar-menu" class="stroke navbar-collapse collapse">
                <ul id="menu-elem" class="nav navbar-nav">
                    <li class="elem-menu"><a class="elem" href="@Url.Action("Index","Home", null)"><span class="elem glyphicon glyphicon-home"></span>Accueil</a></li>
                    <!--<li class="elem-menu"><a class="elem" href="@Url.Action("Catalogue","Catalogue", null)"><span class="elem glyphicon glyphicon-book"></span>Catalogue</a></li>-->
                    <li class="elem-menu"><a class="elem" href="@Url.Action("Import","FicheCours", null)"><span class="elem glyphicon glyphicon-cloud-upload"></span>Importer des PDF</a></li>
                    <li class="elem-menu"><a class="elem" href="@Url.Action("About","Home", null)"><span class="elem glyphicon glyphicon-info-sign"></span>A propos</a></li>
                    <li class="elem-menu"><a class="elem" href="@Url.Action("Contact","Home", null)"><span class="elem glyphicon glyphicon-send"></span>Contact</a></li>
                    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                        <li class="elem-menu"><a class="elem" href="@Url.Action("AdminPanel", "Admin", null)"><span class="elem glyphicon glyphicon-briefcase"></span>Panneau d'administration</a></li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @RenderSection("Banner", required: false)

    <div id="contenu-page">
        @RenderBody()
        <footer>
            <div class="fb-like"
                 data-share="true"
                 data-width="450"
                 data-show-faces="true">
            </div>
            <p>&copy; @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year - Les <strong style="color:#39cf09;">P</strong>rofs sont des <strong style="color:#fa2420;">P</strong>ros du <strong style="color:#ffa500;">P</strong>artage</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/site.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
